source 'https://rubygems.org'

# Pin to the jekyll minor series that matches the lockfile
gem 'jekyll', '~> 4.3'

# Plugins derived from Gemfile.lock (conservative set)
group :jekyll_plugins do
    gem 'jekyll-archives'
    gem 'jekyll-diagrams'
    gem 'jekyll-email-protect'
    gem 'jekyll-feed'
    gem 'jekyll-github-metadata'
    gem 'jekyll-imagemagick'
    gem 'jekyll-paginate-v2'
    gem 'jekyll-scholar'
    gem 'jekyll-seo-tag'
    gem 'jekyll-sitemap'
    gem 'jekyll-target-blank'
    gem 'jekyll-twitter-plugin'
    gem 'jemoji'

    # optional helpers
    gem 'classifier-reborn'
end

# Keep development/external helpers out of the plugin group unless required
group :development do
    gem 'css_parser'
    gem 'httparty'
end
